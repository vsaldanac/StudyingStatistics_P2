<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_primary_borderer_primarylight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Nombre del concepto:" />

    <TextView
        android:id="@+id/gradeTitleTv"
        android:layout_toRightOf="@+id/nameTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="16dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Nivel de EnseÃ±anza Media:" />

    <TextView
        android:id="@+id/nameConceptTv"
        android:layout_below="@+id/nameTitleTv"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#ffffff"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/gradeConceptIv"
        android:layout_below="@+id/nameTitleTv"
        android:layout_toRightOf="@+id/nameTitleTv"
        android:layout_marginLeft="70dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingBottom="16dp"/>

</RelativeLayout>